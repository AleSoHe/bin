#!/bin/bash
bold="\e[1m"
green="\e[92m"

# Charging/Discharging Percentage
battery_info=$(upower -i `upower -e | grep 'BAT'` | grep -e state -e percentage | awk '{print $2}')

# Retrieve words
set -- $battery_info
state=$1
percentage=$2

[ $state == "charging" ] && output="ğŸ”‹âš¡$percentage"
[ $state == "discharging" ] && output="ğŸ”‹ $percentage"
[ $state == "fully-charged" ] && output="ğŸ”‹ $percentage"

# Notify is battery running low
[ $state == "discharging" ] && [ ${percentage%\%} -lt 20 ] && notify battery_low

# OUTPUT
echo -e $output

